{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable","ESNext"],
    "allowJs": true, // Tắt check file js
    "jsx": "react-jsx",
    "incremental": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, // Giúp import các thư viện CommonJS cũ (như express) dễ dàng hơn
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true, // tách type
    "plugins": [
      {
        "name": "next"
      }
    ],

    "noEmit": true, // Không build ra file js
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.js",
    "**/*.mjs"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
